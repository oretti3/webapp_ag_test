{
    "name": "FastAPI Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        // "--network=host",  <-- これを削除し、代わりに以下を追加
        "--dns=8.8.8.8",
        "--dns=8.8.4.4"
    ],
    "forwardPorts": [
        3000,
        8000
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pydantic"
            ]
        }
    },
    "remoteUser": "vscode"
}